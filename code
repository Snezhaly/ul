using System;

namespace ConsoleApp16
{
    public class Ship // варианты кораблей
    {
        string oneSquareShip;
        string twoSquareShip;
        string threeSquareShip;
        string FourSquareShip;
    }
    
    public class HealthIndicator // показатель хп
    {
        int zeroHp = 1;
        int oneHp = 2;
        int twoHp = 3;
        int threeHp = 4;
        int fourHp = 5;
    }

    public class CountHealth // изначальное количество хп
    {
        int oneSquareShip = 1;
        int twoSquareShip = 2;
        int threeSquareShip = 3;
        int fourSquareShip = 4;
    }   

    class FirstPlayer : Ship // функции первого игрока 
    {
        int selectAPosition;
        int attackShip;
        string notificationWhenHit;
    }

    class SecondPlayer : Ship // функции второго игрока 
    {
        int selectAPosition;
        int attackShip;
        string notificationWhenHit;
    }
}
